<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbarStyle="outsideOverlay"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kidus.hello_pay.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <ImageButton
            android:id="@+id/pay"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/my_button"
            android:contentDescription="Pay Button"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pay"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/transfer"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/my_button"
            android:contentDescription="Transfer Button"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/transfer"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/recharge"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_below="@+id/pay_txt"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/pay_txt"
            android:layout_toRightOf="@+id/pay_txt"
            android:background="@drawable/my_button"
            android:contentDescription="Recharge Button"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/recharge"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/my_account"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/my_button"
            android:contentDescription="Account Button"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/my_account"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/info"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignTop="@+id/recharge"
            android:layout_toEndOf="@+id/transfer_txt"
            android:layout_toRightOf="@+id/transfer_txt"
            android:background="@drawable/my_button"
            android:contentDescription="Info Button"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/info"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/pay_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pay"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:elevation="14dp"
            android:text="@string/pay"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/account_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_account"
            android:layout_alignStart="@+id/my_account"
            android:layout_below="@+id/my_account"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:elevation="14dp"
            android:text="@string/account"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/transfer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transfer"
            android:layout_centerHorizontal="true"
            android:elevation="14dp"
            android:text="@string/transfer"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/recharge_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/transfer"
            android:layout_toStartOf="@+id/transfer"
            android:elevation="14dp"
            android:text="@string/recharge"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/transfer"

            android:layout_toRightOf="@+id/transfer"
            android:elevation="14dp"
            android:text="@string/info"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

    </RelativeLayout>


</ScrollView>



