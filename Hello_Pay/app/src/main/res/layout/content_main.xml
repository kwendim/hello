<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"
    android:scrollbarStyle="outsideOverlay"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kidus.hello_pay.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <ImageButton
            android:id="@+id/pay"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/my_button"
            android:contentDescription="Pay Button"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pay"
            tools:ignore="HardcodedText"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="16dp" />

        <ImageButton
            android:id="@+id/transfer"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignBottom="@+id/pay"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/my_button"
            android:contentDescription="Transfer Button"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/transfer"
            tools:ignore="HardcodedText"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp" />

        <ImageButton
            android:id="@+id/recharge"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pay_txt"
            android:layout_marginTop="9dp"
            android:background="@drawable/my_button"
            android:contentDescription="Recharge Button"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/recharge"
            tools:ignore="HardcodedText"
            android:layout_marginLeft="16dp" />

        <ImageButton
            android:id="@+id/my_account"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/recharge"
            android:background="@drawable/my_button"
            android:contentDescription="Account Button"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/my_account"
            tools:ignore="HardcodedText"
            android:layout_marginRight="16dp" />


        <ImageButton
            android:id="@+id/info"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_below="@+id/recharge_txt"
            android:layout_centerHorizontal="true"
            android:background="@drawable/my_button"
            android:contentDescription="Info Button"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/info"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:layout_centerHorizontal="true"
            android:elevation="14dp"
            android:text="@string/info"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/account_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_account"
            android:layout_alignStart="@+id/my_account"
            android:layout_below="@+id/my_account"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:elevation="14dp"
            android:text="@string/account"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/recharge_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:elevation="14dp"
            android:text="@string/recharge"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_below="@+id/recharge"
            android:layout_toLeftOf="@+id/info_txt"
            android:layout_toStartOf="@+id/info_txt" />

        <TextView
            android:id="@+id/pay_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="14dp"
            android:text="@string/pay"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_below="@+id/pay"
            android:layout_toLeftOf="@+id/info"
            android:layout_toStartOf="@+id/info" />

        <TextView
            android:id="@+id/transfer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:elevation="14dp"
            android:text="@string/transfer"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_below="@+id/transfer"
            android:layout_alignLeft="@+id/account_txt"
            android:layout_alignStart="@+id/account_txt" />


    </RelativeLayout>

</ScrollView>


