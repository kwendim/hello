<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2_land"
    android:scrollbarStyle="outsideOverlay"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kidus.hello_pay.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/pay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/my_button"
                    android:contentDescription="Pay Button"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pay"
                    tools:ignore="HardcodedText"
                    android:layout_margin="20dp"
                    />

                <TextView
                    android:id="@+id/pay_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay"
                    android:layout_centerInParent="true"
                    android:elevation="14dp"
                    android:text="@string/pay"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/my_button"
                    android:contentDescription="Transfer Button"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/transfer"
                    tools:ignore="HardcodedText"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/transfer_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/transfer"
                    android:layout_centerInParent="true"
                    android:elevation="14dp"
                    android:text="@string/transfer"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/recharge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/my_button"
                    android:contentDescription="Recharge Button"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/recharge"
                    tools:ignore="HardcodedText"
                    android:layout_margin="20dp"
                    />

                <TextView
                    android:id="@+id/recharge_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recharge"
                    android:layout_centerInParent="true"
                    android:elevation="14dp"
                    android:text="@string/recharge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/my_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/my_button"
                    android:contentDescription="Account Button"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/my_account"
                    tools:ignore="HardcodedText"
                    android:layout_margin="20dp"/>

                <TextView
                    android:id="@+id/account_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_account"
                    android:layout_centerInParent="true"
                    android:elevation="14dp"
                    android:text="@string/account"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp" />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/my_button"
                    android:contentDescription="Info Button"
                    android:elevation="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/info"
                    tools:ignore="HardcodedText"
                    android:layout_margin="20dp"/>


                <TextView
                    android:id="@+id/info_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:elevation="14dp"
                    android:text="@string/info"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:layout_below="@id/info"
                    />
            </RelativeLayout>

        </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>


